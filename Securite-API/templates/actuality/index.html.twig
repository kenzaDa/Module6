{% extends 'base.html.twig' %}

{% block title %}Hello ActualityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { width: 80%; margin:auto; display:flex; flex-direction:column; gap:20px  }
</style>

<div class="example-wrapper" >
<h1>La liste des actualit√©es Talan:</h1>
{% for item in actu %}
<div class="card" style="width: 100%;">
  <div class="card-body">
    <h5 class="card-title">{{item.title}}</h5>
    <p class="card-text">{{item.content}}</p>
    <p> {{ item.date|date('d-m-Y')}}</p>
  </div>
</div>
{% endfor %}
<div class="pages_btn" >
{% for i in 1..nb_page %}
    <a class="btn btn-secondary" id="btn{{i}}" href="{{path('app_actuality',{page : i})}}" >{{i}}</a>
{% endfor %}
</div>
</div>

<script>
window.onload= function () {
  var page = '{{page}}';
  document.getElementById('btn'+ page).style.backgroundColor = "white";
  document.getElementById('btn'+ page).style.color = "black";
}

</script>

{% endblock %}
